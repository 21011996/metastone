<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
         minWidth="-Infinity"
         prefHeight="768.0" prefWidth="1024.0" styleClass="panel" type="BorderPane"
         xmlns="http://javafx.com/javafx/8">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <right>
        <VBox fx:id="sidebar" alignment="BOTTOM_CENTER" spacing="8.0" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="navigationPane" spacing="8.0" styleClass="bordered-panel">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" prefWidth="120.0" text="Back to main menu"
                                wrapText="true"/>
                        <Button fx:id="playButton" mnemonicParsing="false" text="Play">
                            <graphic>
                                <ImageView fitHeight="52.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="/img/ui/play_icon.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </VBox>
            </children>
        </VBox>
    </right>
</fx:root>
